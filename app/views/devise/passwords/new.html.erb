<div class='card container w-50 pt-5 pb-5 p-4 signup'>
  <h2 class='mb-3'>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3 field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: "form-control" %>
    </div>

    <div class="mb-3 actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-light form-control' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>